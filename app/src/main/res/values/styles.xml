<resources>
    <!-- the theme applied to the application or activity -->
    <style name="AppDiscoverTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="android:actionMenuTextColor">#000000</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#009688</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="ActionBarTabText"
        parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>